{
  "name": "nutrigym",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "codegen": "pnpm run db:reset && pnpm run gql:schema && pnpm run gql:gen",
    "gql:schema": "tsx ./scripts/gql/schema.ts > schema.gql",
    "gql:gen": "graphql-codegen --config .graphqlrc.ts",
    "deps:outdated": "pnpm outdated -r",
    "deps:up": "pnpm up --latest -r",
    "db:clean": "tsx --env-file=.env ./scripts/db/clean.ts",
    "db:push": "drizzle-kit push --force",
    "db:reset": "pnpm run db:clean && pnpm run db:push",
    "db:migrate": "drizzle-kit migrate",
    "format": "prettier --write .",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
