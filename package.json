{
  "name": "nutrigym",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "pnpm run gql:init",
    "init": "pnpm i && pnpm run db:init && pnpm run services:init",
    "init:seed": "pnpm i && pnpm run db:init && pnpm run db:seed && pnpm run services:init",
    "services:up": "docker compose up --build -d",
    "services:down": "docker compose down --remove-orphans",
    "services:init": "pnpm run services:up && pnpm run redis:flushall",
    "env:dev:pull": "pnpm run --silent env:dev:show > .env",
    "env:dev:push": "secrets push -s env-dev -f .env",
    "env:dev:show": "secrets show -s env-dev",
    "redis:flushall": "redis-cli -c 'FLUSHALL'",
    "gql:schema": "tsx ./scripts/gql/schema/main.ts > schema.gql",
    "gql:gen": "graphql-codegen --config .graphqlrc.ts",
    "gql:init": "pnpm run gql:schema && pnpm run gql:gen",
    "deps:outdated": "pnpm outdated -r",
    "deps:up": "pnpm up --latest -r",
    "db:seed": "tsx --env-file=.env ./scripts/db/seed/main.ts",
    "db:wipe": "tsx --env-file=.env ./scripts/db/wipe/main.ts",
    "db:push": "drizzle-kit push --force",
    "db:init": "pnpm run db:wipe && pnpm run db:push",
    "db:migrate": "drizzle-kit migrate",
    "format": "prettier --write .",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@clerk/backend": "1.24.1",
    "@clerk/nextjs": "6.11.3",
    "@envelop/response-cache-redis": "4.1.3",
    "@graphql-typed-document-node/core": "3.2.0",
    "@graphql-yoga/plugin-disable-introspection": "2.12.0",
    "@graphql-yoga/plugin-persisted-operations": "3.11.0",
    "@graphql-yoga/plugin-response-cache": "3.13.0",
    "@hookform/resolvers": "4.0.0",
    "@libsql/client": "0.14.0",
    "@pothos/core": "4.3.0",
    "@pothos/plugin-dataloader": "4.3.0",
    "@pothos/plugin-tracing": "1.1.0",
    "@pothos/plugin-zod": "4.1.0",
    "@radix-ui/react-alert-dialog": "1.1.6",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-select": "2.1.6",
    "@radix-ui/react-slider": "1.2.3",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-switch": "1.1.3",
    "@radix-ui/react-tabs": "1.1.3",
    "@tanstack/react-table": "8.21.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.0.0",
    "dataloader": "2.2.3",
    "drizzle-orm": "0.39.3",
    "embla-carousel-react": "8.5.2",
    "graphql": "16.10.0",
    "graphql-scalars": "1.24.1",
    "graphql-yoga": "5.11.0",
    "ioredis": "5.5.0",
    "lucide-react": "0.475.0",
    "next": "15.1.7",
    "next-themes": "0.4.4",
    "react": "19.0.0",
    "react-day-picker": "8.10.1",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "recharts": "2.15.1",
    "tailwind-merge": "3.0.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.6.2",
    "@tailwindcss/postcss": "4.0.6",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "autoprefixer": "10.4.20",
    "drizzle-kit": "0.30.4",
    "drizzle-seed": "0.3.1",
    "eslint": "9.20.1",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "10.0.1",
    "graphql-config": "5.1.3",
    "postcss": "8.5.2",
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "0.6.11",
